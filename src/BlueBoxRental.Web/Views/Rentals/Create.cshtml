@using System.Security.Cryptography.X509Certificates
@model BlueBoxRental.Entities.Extended.RentalViewModel


<h2>Rent a Movie !</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label text="Staff" class="control-label">Staff</label>
                @Html.DropDownListFor(m => m.StaffId, new SelectList(Model.ListStaffs.Select(s => s.FirstName + " " + s.LastName).ToList()), "", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label text="Film" class="control-label">Film</label>
                @Html.DropDownListFor(m => m.FilmId, new SelectList(Model.ListFilms.Select(c => c.Title)), "", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label text="Customer" class="control-label">Customer</label>
                @Html.DropDownListFor(m => m.CustomerId, new SelectList(Model.ListCustomers.Select(c => c.FirstName + " " + c.LastName)), "", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Films" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
